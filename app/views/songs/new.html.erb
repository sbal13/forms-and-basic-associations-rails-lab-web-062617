<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br><br>
  <%= f.collection_select(:genre_name, Genre.all, :name, :name, prompt: true)%><br><br>

  <%= f.label 'Notes'%>
  <%= f.text_field :note_contents, multiple: true, id: 'song_notes_1'%><br>
  <%= f.text_field :note_contents, multiple: true, id: 'song_notes_2'%><br>

  <%= f.submit %>
<% end %>


